<Window x:Class="ReversedClient.client_view.ClientLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReversedClient.client_view"
        mc:Ignorable="d"
        Title="ClientLoginWindow" Height="450" Width="400"
        Closing="OnClosing">
    <Grid>
        <TextBox Style="{StaticResource LoginTextBox}" HorizontalAlignment="Center" Margin="0,80,0,0" TextWrapping="Wrap" Text="{Binding Path=LocalUserTechnicalData.Login}" VerticalAlignment="Top" Width="120"/>
        <TextBox Style="{StaticResource PasswordTextBox}" Text="{Binding Path=LocalUserTechnicalData.Password}" HorizontalAlignment="Center" Margin="0,133,0,0" VerticalAlignment="Top" Width="120" MaxLength="16"/>
        <Button Content="Sign In" Command="{Binding SignInCommand}" HorizontalAlignment="Center" Width="90" Height="30" VerticalAlignment="Center"/>
        <Button Content="Sign Up" Command="{Binding SignUpCommand}" HorizontalAlignment="Center" Margin="0,272,0,0" Width="90" Height="30" VerticalAlignment="Top"/>
    </Grid>
</Window>
